<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vbyte.decisionengine.mapper.BaseFieldMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.vbyte.decisionengine.fields.BaseField">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="table_name" property="table_name" />
        <result column="type_name" property="type_name" />
        <result column="table_id" property="table_id" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, table_name, type_name, table_id
    </sql>

    <select id="search" resultType="java.lang.Long">
        select table_id from fields_msg where table_name = #{tableName} and match (json_value) against (#{key} in natural language mode)
    </select>

</mapper>
